{
    "name": "@ti-platform/aide-cli",
    "version": "0.1.0",
    "bin": {
        "run-eslint": "./dist/run-eslint.js",
        "run-linter": "./dist/run-linter.js",
        "run-prettier": "./dist/run-prettier.js"
    },
    "files": [
        "dist/",
        "src/"
    ],
    "config": {
        "lintArgs": "-d ./src -e .ts -g"
    },
    "scripts": {
        "build": "pnpm run-linter && tsc",
        "dev": "concurrently -n Linter,TypeScript -c 'yellow.bold,cyan.bold' 'pnpm run-linter -- -w' 'tsc -w --pretty'",
        "run-eslint": "node -r esbuild-register ./src/run-eslint.ts $npm_package_config_lintArgs",
        "run-linter": "node -r esbuild-register ./src/run-linter.ts $npm_package_config_lintArgs",
        "run-prettier": "node -r esbuild-register ./src/run-prettier.ts $npm_package_config_lintArgs"
    },
    "dependencies": {
        "@ti-platform/aide-build-tools": "workspace:*",
        "@tsconfig/recommended": "1.0.1",
        "chokidar": "3.5.2",
        "cleye": "1.0.1",
        "eslint": "8.4.1",
        "prettier": "2.5.1",
        "typescript": "4.5.2"
    },
    "devDependencies": {
        "@types/node": "16.11.12",
        "@types/prettier": "2.4.2",
        "concurrently": "7.0.0",
        "esbuild": "0.14.3",
        "esbuild-register": "3.2.1"
    }
}
