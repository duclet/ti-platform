{
    "name": "@ti-platform/aide",
    "version": "0.3.0",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/",
        "src/",
        "CHANGELOG.md",
        "README.md"
    ],
    "config": {
        "linterArgs": "-d ./src -e .ts -g"
    },
    "scripts": {
        "build": "rm -rf ./dist && pnpm run-linter -- -k && tsc -d",
        "build-docs": "run-typedoc",
        "dev": "rm -rf ./dist && pnpm run-linter -- -k -w -c 'tsc --incremental'",
        "run-linter": "run-linter $npm_package_config_linterArgs"
    },
    "devDependencies": {
        "@ti-platform/aide-build-tools": "workspace:*",
        "@types/node": "^16.0.0",
        "eslint": "^8.23.0",
        "prettier": "^2.7.0",
        "typedoc": "^0.23.13",
        "typedoc-plugin-markdown": "^3.13.0",
        "typescript": "^4.8.0",
        "vite": "^3.0.0"
    }
}
