{
    "name": "@ti-platform/aide",
    "version": "1.1.1",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/",
        "src/",
        "CHANGELOG.md",
        "README.md"
    ],
    "scripts": {
        "build:docs": "run-typedoc",
        "build:src": "tsup",
        "build:renameDist": "sed -i 's/\\(require(.\\+\\).js/\\1.cjs/g' dist/*.cjs",
        "clean": "rm -rf ./dist",
        "lint": "run-linter -d ./src -e .ts -g -k -c 'pnpm tsc --noEmit'",
        "prod": "pnpm clean && pnpm lint && pnpm build:src --minify 2>&1 && pnpm build:renameDist && pnpm build:docs",
        "dev": "pnpm clean && pnpm lint -w -c 'pnpm build:src'",
        "build": "pnpm prod"
    },
    "devDependencies": {
        "@ti-platform/aide-build-tools": "workspace:*",
        "@types/node": "^16.0.0",
        "eslint": "^8.43.0",
        "prettier": "^2.8.8",
        "tsup": "^7.0.0",
        "typedoc": "^0.24.8",
        "typedoc-plugin-markdown": "^3.15.3",
        "typescript": "^5.0.4",
        "vite": "^4.3.9"
    },
    "typedocOptions": {
        "plugin": [
            "typedoc-plugin-markdown"
        ]
    }
}
