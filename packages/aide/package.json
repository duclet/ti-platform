{
    "name": "@ti-platform/aide",
    "version": "0.2.1",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/",
        "src/"
    ],
    "config": {
        "linterArgs": "-d ./src -e .ts -g"
    },
    "scripts": {
        "build": "rm -rf ./dist && pnpm run-linter -- -k && tsc -d",
        "dev": "rm -rf ./dist && pnpm run-linter -- -k -w -c 'tsc --incremental'",
        "run-linter": "run-linter $npm_package_config_linterArgs"
    },
    "devDependencies": {
        "@ti-platform/aide-build-tools": "workspace:*",
        "@types/node": "17.0.10",
        "eslint": "8.7.0",
        "prettier": "2.5.1",
        "typescript": "4.5.4",
        "vite": "2.7.12"
    }
}
