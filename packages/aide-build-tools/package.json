{
    "name": "@ti-platform/aide-build-tools",
    "version": "0.10.0",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "run-eslint": "./dist/bin/run-eslint.js",
        "run-linter": "./dist/bin/run-linter.js",
        "run-prettier": "./dist/bin/run-prettier.js",
        "run-typedoc": "./dist/bin/run-typedoc.js"
    },
    "files": [
        "bash/",
        "dist/",
        "src/",
        "tsconfig.base.json",
        "CHANGELOG.md",
        "README.md"
    ],
    "scripts": {
        "build:docs": "node -r esbuild-register src/bin/run-typedoc.ts",
        "build:src": "tsup",
        "clean": "rm -rf ./dist",
        "lint": "node -r esbuild-register src/bin/run-linter.ts -d ./src -e .ts -g -k -c 'pnpm tsc --noEmit'",
        "prod": "pnpm clean && pnpm lint && pnpm build:src --minify && pnpm build:docs",
        "dev": "pnpm clean && pnpm lint -w -c 'pnpm build:src'",
        "build": "pnpm prod"
    },
    "dependencies": {
        "@html-eslint/eslint-plugin": "^0.19.0",
        "@html-eslint/parser": "^0.19.0",
        "@tsconfig/recommended": "^1.0.2",
        "@typescript-eslint/eslint-plugin": "^5.60.0",
        "@typescript-eslint/parser": "^5.60.0",
        "chokidar": "^3.5.0",
        "cleye": "^1.3.2",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-json": "^3.1.0",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-vue": "^9.15.0",
        "postcss": "^8.4.24",
        "prettier": "^2.8.8",
        "rollup": "^3.25.1",
        "ts-debounce": "^4.0.0",
        "typescript": "^5.0.4",
        "vite": "^4.3.9",
        "vite-plugin-dts": "^2.3.0"
    },
    "devDependencies": {
        "@types/eslint": "^8.40.2",
        "@types/node": "^20.3.1",
        "@types/prettier": "^2.7.3",
        "esbuild": "^0.18.6",
        "esbuild-register": "^3.4.2",
        "tsup": "^7.0.0",
        "typedoc": "^0.24.8",
        "typedoc-plugin-markdown": "^3.15.3"
    },
    "typedocOptions": {
        "plugin": [
            "typedoc-plugin-markdown"
        ]
    }
}
