{
    "name": "@ti-platform/aide-build-tools",
    "version": "0.7.2",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "run-eslint": "./dist/bin/run-eslint.js",
        "run-linter": "./dist/bin/run-linter.js",
        "run-prettier": "./dist/bin/run-prettier.js"
    },
    "files": [
        "bash/",
        "dist/",
        "src/",
        "tsconfig.base.json",
        "CHANGELOG.md",
        "README.md"
    ],
    "config": {
        "linterArgs": "-d ./src -e .ts -g"
    },
    "scripts": {
        "build": "rm -rf ./dist && pnpm run-linter -- -k && tsc -d",
        "build-docs": "typedoc --out docs --hideBreadcrumbs ./src/index.ts && cp docs/modules.md README.md && rm -rf ./docs",
        "dev": "rm -rf ./dist && pnpm run-linter -- -k -w -c 'tsc --incremental'",
        "run-linter": "node -r esbuild-register src/bin/run-linter.ts $npm_package_config_linterArgs"
    },
    "dependencies": {
        "@html-eslint/eslint-plugin": "0.13.1",
        "@html-eslint/parser": "0.13.1",
        "@tsconfig/recommended": "1.0.1",
        "@typescript-eslint/eslint-plugin": "5.10.0",
        "@typescript-eslint/parser": "5.10.0",
        "chokidar": "3.5.3",
        "cleye": "1.0.1",
        "eslint": "8.7.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-import-resolver-typescript": "2.5.0",
        "eslint-plugin-import": "2.25.4",
        "eslint-plugin-json": "3.1.0",
        "eslint-plugin-simple-import-sort": "7.0.0",
        "eslint-plugin-vue": "8.3.0",
        "postcss": "8.4.5",
        "prettier": "2.5.1",
        "rollup": "2.64.0",
        "ts-debounce": "4.0.0",
        "typescript": "4.5.4",
        "vite": "2.7.12",
        "vite-plugin-dts": "0.9.9"
    },
    "devDependencies": {
        "@types/eslint": "8.2.2",
        "@types/node": "17.0.10",
        "@types/prettier": "2.4.3",
        "esbuild": "0.14.11",
        "esbuild-register": "3.3.2",
        "typedoc": "0.22.11",
        "typedoc-plugin-markdown": "3.11.12"
    }
}
