{
    "name": "@ti-platform/aide-build-tools",
    "version": "0.6.2",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "run-eslint": "./dist/bin/run-eslint.js",
        "run-linter": "./dist/bin/run-linter.js",
        "run-prettier": "./dist/bin/run-prettier.js"
    },
    "files": [
        "bash/",
        "dist/",
        "src/",
        "tsconfig.base.json"
    ],
    "config": {
        "linterArgs": "-d ./src -e .ts -g"
    },
    "scripts": {
        "build": "rm -rf ./dist && pnpm run-linter -- -k && tsc -d",
        "dev": "rm -rf ./dist && pnpm run-linter -- -k -w -c 'tsc --incremental'",
        "run-linter": "node -r esbuild-register src/bin/run-linter.ts $npm_package_config_linterArgs"
    },
    "dependencies": {
        "@html-eslint/eslint-plugin": "0.13.0",
        "@html-eslint/parser": "0.13.0",
        "@tsconfig/recommended": "1.0.1",
        "@typescript-eslint/eslint-plugin": "5.6.0",
        "@typescript-eslint/parser": "5.6.0",
        "chokidar": "3.5.2",
        "cleye": "1.0.1",
        "eslint": "8.4.1",
        "eslint-config-prettier": "8.3.0",
        "eslint-import-resolver-typescript": "2.5.0",
        "eslint-plugin-import": "2.25.3",
        "eslint-plugin-json": "3.1.0",
        "eslint-plugin-simple-import-sort": "7.0.0",
        "eslint-plugin-vue": "8.2.0",
        "postcss": "8.4.5",
        "prettier": "2.5.1",
        "rollup": "2.63.0",
        "ts-debounce": "4.0.0",
        "typescript": "4.5.2",
        "vite": "2.6.14",
        "vite-plugin-dts": "0.9.6"
    },
    "devDependencies": {
        "@types/eslint": "8.2.1",
        "@types/node": "16.11.12",
        "@types/prettier": "2.4.2",
        "esbuild": "0.14.3",
        "esbuild-register": "3.2.1"
    }
}
